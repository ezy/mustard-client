<div class="main">
  <div class="container-fluid">
    <div class="row">
      <div class="col">
        <h3>Contact us by email using the form below</h3>
        <hr>
      </div>
    </div>
    <div class="row">
      <div class="offset-md-1 col-md-10">
        <div class="card">
          <div class="card-body">
            <form class="form" role="form" id="formContact" {{action 'sendContact' on='submit'}}>
              <div class="form-group">
                <label for="name-input">Name</label>
                <input class="form-control" type="text" id="name-input" placeholder="First and surname">
              </div>
              <div class="form-group">
                <label for="email-input">Email</label>
                <input type="email" class="form-control" id="email-input" placeholder="name@example.com">
              </div>
              <div class="form-group">
                <label for="subject-input">Message subject</label>
                <select class="form-control" id="subject-input">
                  <option>General enquiry</option>
                  <option>Prayer request</option>
                </select>
              </div>
              <div class="form-group">
                <label for="message-input">Message</label>
                <textarea class="form-control" id="message-input" rows="5"></textarea>
              </div>
              <button type="submit" class="btn btn-primary mt-3 mb-3">Send message</button>
            </form>
          </div>
        </div>
      </div>
    </div>
  </div>

  <hr>

  <div class="container-fluid">
    <div class="row">
      <div class="col">
        <h3>Our location</h3>
      </div>
    </div>
  </div>
  {{address-map }}
</div>
