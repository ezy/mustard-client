{{nav-header church=church}}

<div id="ministries" class="main">
  <div class="container-fluid">
    <div class="row">
      <div class="col">
        <h1>Ministries</h1>
        <hr>
      </div>
    </div>
    <div class="row">
      {{#each filteredMinistry as |ministry|}}
        <div class="col-lg-3 col-md-4">
          <div class="card">
            <img class="card-img-top" src={{ministry.image}} alt={{ministry.title}} >
            <div class="card-body">
              <h5 class="card-title">{{ministry.title}}</h5>
              <p class="card-text">{{truncate-text ministry.text limit=200 stripHtml=true}}</p>
              {{#link-to "ministries.ministry" ministry.id class="btn btn-primary"}}
                {{ministry.title}}
              {{/link-to}}
            </div>
          </div>
        </div>
      {{/each}}
    </div>
  </div>
</div>

{{nav-footer church=church}}
