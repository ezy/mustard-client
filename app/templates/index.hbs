<div class="main">
  <div class="container-fluid">
    <div class="row">
      <div class="col">
        <div class="service-times card card-square text-white bg-olive mb-3">
          <div class="card-body">
            <div class="row">
              <div class="col">
                This Sunday
              </div>
              <div class="col">
                <span class="float-right">
                  Bruce Bell - 10:30AM
                </span>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <div class="container-fluid">
    <div class="row">
      <div class="col">
        {{slide-carousel id="home-carousel" slides=slides}}
      </div>
    </div>
  </div>

  <hr>
  <div class="container-fluid mt-3">
    <div class="row">
      <div class="col-md-6">
        <h3>Notices</h3>
        <hr>
        {{notice-summary notices=notices}}
      </div>
      <div class="col-md-6">
        <h3>Sermons</h3>
        <ul>
          {{#each sermons as |sermon|}}
            <li>
              <h3><a href="#">{{sermon.title}}</a></h3>
              <p><span class="badge badge-info">New</span> {{sermon.summary}}</p>
              <p>
                {{#each sermon.tags as |tag|}}
                  <span class="badge badge-secondary">{{tag}}</span>
                {{/each}}
              </p>
            </li>
          {{/each}}
        </ul>
      </div>
    </div>
  </div>

  <hr>

  {{address-map }}

</div>
{{!-- End .main --}}
