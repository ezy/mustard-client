<div class="main">
  <div class="container-fluid">
    <div class="row">
      <div class="col">
        <div class="card text-white bg-secondary mb-3">
          <div class="card-body">
            <div class="row">
              <div class="col">
                <p>
                  Service time: <br>
                  Speaker:
                </p>
              </div>
              <div class="col">
                <p class="float-right">
                  10:30AM <br>
                  Bruce Bell
                </p>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <div class="container-fluid">
    <div class="row">
      <div class="col">
        <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
          <ol class="carousel-indicators">
            <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
            <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
            <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
          </ol>
          <div class="carousel-inner">
            <div class="carousel-item active">
              <img class="d-block w-100" src="http://via.placeholder.com/2160x600/999999/" alt="First slide">
            </div>
            <div class="carousel-item">
              <img class="d-block w-100" src="http://via.placeholder.com/2160x600/555555/" alt="Second slide">
            </div>
            <div class="carousel-item">
              <img class="d-block w-100" src="http://via.placeholder.com/2160x600/222222/" alt="Third slide">
            </div>
          </div>
          <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
          </a>
          <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
          </a>
        </div>
      </div>
    </div>
  </div>

  <hr>

  <div class="container-fluid mt-3">
    <div class="row">
      <div class="col-6">
        <ul>
          <li>
            <h3>Title</h3>
            <p><span class="badge badge-info">New</span> Lorem ipsum dolor sit amet.</p>
          </li>
          <li>
            <h3>Title </h3>
            <p><span class="badge badge-info">New</span> Lorem ipsum dolor sit amet.</p>
          </li>
          <li>
            <h3>Title </h3>
            <p><span class="badge badge-info">New</span> Lorem ipsum dolor sit amet.</p>
          </li>
          <li>
            <h3>Title </h3>
            <p><span class="badge badge-info">New</span> Lorem ipsum dolor sit amet.</p>
          </li>
        </ul>
      </div>
      <div class="col-6">
        <ul>
          {{#each sermons as |sermon|}}
            <li>
              <h3><a href="#">{{sermon.title}}</a></h3>
              <p><span class="badge badge-info">New</span> {{sermon.blurb}}</p>
              <p>
                {{#each sermon.tags as |tag|}}
                  <span class="badge badge-secondary">{{tag}}</span>
                {{/each}}
              </p>
            </li>
          {{/each}}
        </ul>
      </div>
    </div>
  </div>

  <hr>

  <div class="container-fluid mt-3">
    <div class="row">
      <div class="col-6" style="height: 300px;">
        {{#leaflet-map lat=-41.230087 lng=174.894357 zoom=16}}

          {{tile-layer url="http://{s}.basemaps.cartocdn.com/light_all/{z}/{x}/{y}.png"}}
          {{!-- {{tile-layer url="https://cartodb-basemaps-{s}.global.ssl.fastly.net/dark_all/{z}/{x}/{y}.png"}} --}}
          {{!-- {{tile-layer url="http://b.tile.openstreetmap.fr/hot/{z}/{x}/{y}.png"}} --}}

          {{#marker-layer location=location}}
            {{#popup-layer}}
              <h3>The Olive Tree Church</h3>
              476-486 Jackson Street<br>
              Petone
            {{/popup-layer}}
          {{/marker-layer}}

        {{/leaflet-map}}
      </div>
      <div class="col-6">
        <address>
          <strong>The Olive Tree Church</strong><br>
          476-486 Jackson Street<br>
          Petone<br>
          Lower Hutt<br>
          P: (04) 891 0557
        </address>
      </div>
    </div>
  </div>

</div>
