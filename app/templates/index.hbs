<div class="main">
  <div class="container-fluid">
    <div class="row">
      <div class="col">
        <div class="service-times card card-square text-white bg-olive mb-3">
          <div class="card-body">
            <div class="row">
              <div class="col">
                This Sunday
              </div>
              <div class="col">
                <span class="float-right">
                  Bruce Bell - 10:30AM
                </span>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <div class="container-fluid">
    <div class="row">
      <div class="col">
        {{slide-carousel id="home-carousel" slides=slides}}
      </div>
    </div>
  </div>

  <hr>
  <div class="container-fluid mt-3">
    <div class="row">
      <div class="col-6">
        <h3>Notices</h3>
        <ul>
          {{#each notices as |notice|}}
          <li>
            <h3>{{notice.title}}</h3>
            <p>{{date-format notice.date 'd MMM YY'}} <span class="badge badge-success">{{notice.category}}</span></p>
            <p>{{notice.body}}</p>
            <p>
              {{#each notice.tags as |tag|}}
                <span class="badge badge-secondary">{{tag}}</span>
              {{/each}}
            </p>
          </li>
          {{/each}}
        </ul>
      </div>
      <div class="col-6">
        <h3>Sermons</h3>
        <ul>
          {{#each sermons as |sermon|}}
            <li>
              <h3><a href="#">{{sermon.title}}</a></h3>
              <p><span class="badge badge-info">New</span> {{sermon.summary}}</p>
              <p>
                {{#each sermon.tags as |tag|}}
                  <span class="badge badge-secondary">{{tag}}</span>
                {{/each}}
              </p>
            </li>
          {{/each}}
        </ul>
      </div>
    </div>
  </div>

  <hr>

  <div class="container-fluid mt-3">
    <div class="row">
      <div class="col-6">
        <address>
          <strong>The Olive Tree Church</strong><br>
          476-486 Jackson Street<br>
          Petone<br>
          Lower Hutt<br>
          P: (04) 891 0557
        </address>
      </div>
      <div class="col-6" style="height: 300px;">
        {{#leaflet-map lat=-41.230087 lng=174.894357 zoom=16 scrollWheelZoom=false}}

          {{tile-layer url="http://{s}.basemaps.cartocdn.com/light_all/{z}/{x}/{y}.png"}}
          {{!-- {{tile-layer url="https://cartodb-basemaps-{s}.global.ssl.fastly.net/dark_all/{z}/{x}/{y}.png"}} --}}
          {{!-- {{tile-layer url="http://b.tile.openstreetmap.fr/hot/{z}/{x}/{y}.png"}} --}}

          {{#marker-layer location=location}}
            {{#popup-layer}}
              <h3>The Olive Tree Church</h3>
              476-486 Jackson Street<br>
              Petone
            {{/popup-layer}}
          {{/marker-layer}}

        {{/leaflet-map}}
      </div>
    </div>
  </div>

</div>
{{!-- End .main --}}
