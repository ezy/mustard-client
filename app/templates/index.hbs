{{nav-header church=model.church}}

<div class="main">

  {{slide-carousel id="home-carousel" slides=slides}}

  {{this-sunday service=nextService}}

  <div class="container-fluid">
    <div class="row">
      {{#if newsFeed}}
        <div class="col-md-6">
          <h4 class="home">Notices</h4>
          <hr>
          {{notice-summary notices=newsFeed}}
        </div>
      {{/if}}
      {{#if model.audios}}
        <div class="col-md-6">
          <h4 class="home">Messages</h4>
          <hr>
          {{media-audio medias=filteredAudio}}
        </div>
      {{/if}}
    </div>
  </div>
  
  {{address-map church=model.church}}

</div>

{{nav-footer church=model.church}}
