<ul id="audios">
  {{#each sortedAudio as |audio index|}}
    <li>
      <article>
        <header>
          <h3><a data-toggle="collapse" href="#audioCollapse-{{index}}" aria-expanded="false" aria-controls="#audioCollapse-{{index}}">
            <i class="material-icons">video_library</i> {{audio.title}}</a>
          </h3>
        </header>
        <p class="text-body">{{{audio.text}}}</p>
        <div class="collapse" id="audioCollapse-{{index}}">
          <video controls preload="auto" name="{{audio.title}}" poster="/assets/img/audio.png">
            <source src="/assets/test-audio/20180211.mp3" type="audio/mp3">
              <p class="text-body">Your browser doesn't support video/audio playback.</p>
              <p><a href="/assets/test-audio/20180211.mp3" download>Download {{audio.title}}</a></p>
          </video>
          <br>
        </div>
        <span class="datestamp">{{date-format notice.date 'd MMM YY'}}</span>
        <p class="float-right speaker">
          <i class="material-icons">face</i> {{#link-to 'index'}}{{audio.speaker}}{{/link-to}}
        </p>
      </article>
    </li>
    <hr>
  {{/each}}
</ul>
