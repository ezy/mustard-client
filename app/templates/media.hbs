<div class="main">
  <div class="container-fluid">
    <div class="row">
      <div class="col">
        <h3>Sermons</h3>
        <hr>
      </div>
    </div>
    <div class="row">
      <div class="col">
        <ul id="audios">
          {{#each model as |audio|}}
            <li>
              <article>
                <header>
                  <h3><a href="#" data-toggle="tooltip" data-placement="right" title="Download file"><i class="material-icons">file_download</i> {{audio.title}}</a></h3>
                </header>
                <p class="body">{{audio.summary}}</p>
                <span class="datestamp">{{!-- <span class="category">{{audio.category}}</span>&nbsp;&nbsp;&nbsp;&nbsp; --}}{{date-format notice.date 'd MMM YY'}}</span>
                <p class="float-right speaker">
                  <i class="material-icons">face</i> {{#link-to 'index'}}{{audio.speaker}}{{/link-to}}
                </p>
              </article>
            </li>
            <hr>
          {{/each}}
        </ul>
      </div>
    </div>
  </div>
</div>
